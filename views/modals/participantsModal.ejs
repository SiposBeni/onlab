<div class="modal fade" id="participantsModal" tabindex="-1" aria-labelledby="participantsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="participantsModalLabel">Joined players (<%= participants.length  %>/<%= event.maxPlayers %>)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Participant names -->
                <% participants.forEach(player=> { %>
                    <a class="row m-3" href="../profile/<%= player._id %>">
                        <%= player.name %>
                    </a>
                    <% }); %>
            </div>
        </div>
    </div>
</div>